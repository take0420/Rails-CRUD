<h1>
  Posts
  <%= link_to "Add new", new_post_path %>
</h1>

<ul>
  <% @posts.each do |post| %>
  <li>
    <%= link_to post.title, post_path(post)%>
    <%= link_to "Edit", edit_post_path(post)%>
    <%= button_to "Delete",
        post_path(post), 
        method: :delete,
        form: { class: "delete-form" } %>
  </li>
  <% end %>
</ul>
  
